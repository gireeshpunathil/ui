<%# Method to get the i18n message file path based on locale %>
<%
  getNLSFilePath = function(locale) {
    if(locale === 'en') {
      return 'nls/kappnav.js';
    }
    filenameLocaleSuffix = locale ? locale.replace('-', '_') : '';
    return `nls/kappnav_${filenameLocaleSuffix}.js`;
  }
%>

<!DOCTYPE html>
<html lang='<%= myLocale %>' kube='<%= kube %>' displayUser='<%= displayUser %>' appnavConfigmapNamespace='<%= appnavConfigmapNamespace %>' >
  <meta name="csrf-token" content='<%= csrfToken %>'>

  <head>
    <meta charset="UTF-8">
    <link rel='stylesheet' href='<%= manifest.common.css %>'>
    <link rel='stylesheet' href='<%= manifest.main.css %>'>
    <link rel='icon' href='<%= manifest.main.css %>'>
    <link rel='icon' href="<%= contextPath %>/graphics/KAppNavLogo_1x.png">
  </head>

  <body aria-label='<%= title %>'>
    <div id="app"></div>
    <script src='<%= getNLSFilePath(myLocale) %>'></script>
    <script src='<%= manifest.vendorappnav.js %>'></script>
    <script src='<%= manifest.main.js %>'></script>
    <script src='<%= manifest.common.js %>'></script>
    
  </body>

</html>